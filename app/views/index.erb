<h1>All Tasks</h1>

<ol>
  <% @tasks.each do |task| %>
    <li><h3><a href ="/tasks/<%= task.id %>"><%= task.title %></a></h3></li>
    <button class="btn-default"> <a href="/tasks/<%= task.id %>/edit">Edit</a></button>
    <form action="/tasks/<%=task.id %>" method="POST">
      <input type="hidden" name="_method" value="delete">
    <input class="btn-warning" type="submit" value="Delete">
    </form>
  <% end %>
</ol>

